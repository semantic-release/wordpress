{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "removeComments": false,
      "noLib": false,
      "target": "ES2022",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true
    },
    "include": [
      "lib/**/*"
    ],
  }
  